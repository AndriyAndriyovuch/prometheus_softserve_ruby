<div class="container px-4 py-5">

  <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg" >
    <div class="d flex-column h-100 p-5 pb-3 text-shadow-1">

      <h2 class="display-6 lh-1 fw-bold"><%= operation.amount %></h2>


      <h3 class='display-6 lh-1 fw-bold'><%= format_description(operation) %></h3>
      <small><%= show_operation_type(operation) %></small><br>


      <ul class="d-flex list-unstyled mt-auto">
        <li class="d-flex align-items-center me-3">
          <small><%= operation.odate.strftime("%Y-%m-%d") %></small>
        </li>
        <li class="d-flex align-items-center">
          <small><%= distance_of_time_in_words((Time.now - operation.odate).to_i) %> ago</small>
        </li>
      </ul>


      <small><%= Category.find(operation.category_id).name %></small>
    
      <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group me-2" role="group" aria-label="First group">         
          <%= link_to t('show'), operation, class:"btn btn-primary"%>
          <%= link_to t('edit'), edit_operation_path(operation), class:"btn btn-primary"%>
        </div>

        <div class="btn-group me-2" role="group" aria-label="Second group">         
          <%= button_to t('delete'), operation, data: {turbo_confirm: t('confirm')}, method: :delete, class:"btn btn-danger"%>
        </div>
      </div>

    </div>
  </div>      
</div>
