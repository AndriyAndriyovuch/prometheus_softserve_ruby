<%= form_with(model: operation) do |form| %>
  <% if operation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
        <% operation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="container">
    <div class="col">
      <%= form.label :amount,style: "display: block" %>
      <%= form.text_field :amount, class:"form-control " %>
    </div>

    <div id="date-picker-example" class="md-form md-outline input-with-post-icon datepicker" >
      <%= form.label :odate, style: "display: block" %>
      <%= form.datetime_field :odate, class:"form-control" %>
    </div>

    <div class="col">
      <%= form.label :description, style: "display: block" %>
      <%= form.text_field :description, class:"form-control"   %>
    </div>

    <div class="col">
      <%= form.label :income %>
      <%= form.check_box :income, {}, true %>
    </div>


    <div class="col">
      <%= form.label :category_id, style: "display: block"%>
      <% categories_array = Category.all.where('user_id = ?', current_user.id).map { | cat | [cat.name, cat.id]} %>
      <%= form.select(:category_id, categories_array, {include_blank: 'Choose category'}, {:class => 'btn btn-secondary dropdown-toggle'}) %>
    </div>

    
    <hr class="border border border-3 opacity-100">


    <div class="col">
        <%= form.submit class:"btn btn-success" %>
    </div>
  </div>
<% end %>

