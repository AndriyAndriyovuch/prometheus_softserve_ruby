<div class="container px-4 py-5">

  <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg" >
      <%= button_to image_tag("delete-button.png", width: '30px'), 
                      category, method: :delete, data: {turbo_confirm: t('confirm')}, 
                      class: 'nav-link bg-transparent border-0 shadow-none position-absolute top-0 end-0 ', id:'delete-button' %>

    <div class="d flex-column h-100 p-5 pb-3 text-shadow-1">

      <h2 class="display-6 lh-1 fw-bold"><%= category.name %></h2>
      <div id="description-text"><%= category.description %></div><br><br><br>

      <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups" id="button-groups">
        <div class="btn-group me-2" role="group" aria-label="First group">
          <%= link_to t('show'), category, class:"btn btn-primary", id:"card-button-groups" %>
          <%= link_to t('edit'), edit_category_path(category), class:"btn btn-primary", id:"card-button-groups" %><br>
          <%= link_to t('categories.show_operations'), operations_path(category:), class:"btn btn-primary", id:"card-button-groups" %>
        </div>
      </div>

    </div>
  </div>      
</div>
