<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div id="categories">
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        <% @categories.each do |category| %>
            <%= render category %>
        <% end %>

      </div>
    </div>
  </div>
</div>

<%= link_to "New category", new_category_path %>
