<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<h1>Report by dates</h1>
<canvas id="myChart" width="2000" height="300"></canvas>
<script>
    const ctx = document.getElementById('myChart');

    const my_data = {
        labels: <%= raw @operations_date %>,
        datasets: [{
            label: 'Report by dates',
            data: <%= @operations_amount %>,
            fill: false,
            borderColor: 'rgb(75, 192, 192)',
            tension: 0.1
        }]
    };

    const config = {
        type: 'line',
        data: my_data,
        options: {
            animations: {
                tension: {
                    duration: 1000,
                    easing: 'linear',
                    from: 0.3,
                    to: 0.2,
                    loop: true
                }
            },
        }
    };

    const myChart = new Chart(ctx, config);
</script>

