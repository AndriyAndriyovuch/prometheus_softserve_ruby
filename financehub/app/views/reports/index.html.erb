<div class="d-flex justify-content-center">

  <%= form_with method: :get do |form| %>
    <h1 class="text-center">Reports</h1>
    <hr class="border border-3 opacity-100">

    <div class="input-with-post-icon datepicker" >
      <%= form.label "Start date:", style: "display: block"%>
      <%= form.date_field :start_date, value: '1970-01-01' , class:"form-control" %>
    </div>

    <div class="input-with-post-icon datepicker" >
      <%= form.label "End date:", style: "display: block" %>
      <%= form.date_field :final_date, value: '2030-12-12' , class:"form-control" %>
    </div>

    <div class="text-center">
      <%= form.label :category_id, style: "display: block"%>
      <% categories_array = Category.all.where('user_id = ?', current_user.id).map { | cat | [cat.name, cat.id]} %>
      <%= form.select(:category_id, categories_array, {include_blank: 'Choose category'}, {:class => 'btn btn-secondary dropdown-toggle'}) %>
    </div>

    <br>
    <div class="col">
      <%= form.label "Include income" %>
      <%= form.check_box :income, {}, true %>
    </div>
    <br>

    <div class="btn-group">
        <%= form.submit 'Report by category', formaction: reports_report_by_category_path, class:"btn btn-primary" %>
        <%= form.submit 'Report by dates', formaction: reports_report_by_dates_path, class:"btn btn-warning"  %>
    </div>
  <% end %>
</div>


