<%= form_with method: :get do |form| %>
  <%= form.date_field :start_date, value: '1970-01-01' %>
  <%= form.date_field :final_date, value: '2030-12-12' %>

  <%= form.label :category_id, style: "display: block" %>
  <% categories_array = Category.all.map { |cat| [cat.name, cat.id] } %>
  <%= form.select :category_id, categories_array, :prompt => 'Choose category' %>

  <%= form.submit 'Report by category', formaction: reports_report_by_category_path %>
  <%= form.submit 'Report by dates', formaction: reports_report_by_dates_path %>
<% end %>



